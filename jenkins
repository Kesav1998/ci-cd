pipeline {
    agent any

    environment {
        TARGET_DIR = '/home/ec2-user/updated-files'
    }

    triggers {
        pollSCM('* * * * *')  // Poll GitHub every 1 minute
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/Kesav1998/ci-cd.git', branch: 'main'
            }
        }

        stage('Check if simple.py changed') {
            steps {
                script {
                    def changedFiles = sh(script: 'git diff --name-only HEAD~1 HEAD', returnStdout: true).trim()
                    echo "Changed files:\n${changedFiles}"
                    if (!changedFiles.contains('simple.py')) {
                        echo "simple.py was not changed. Stopping here."
                        currentBuild.result = 'NOT_BUILT'
                        error("No change in simple.py")
                    }
                }
            }
        }

        stage('Copy simple.py') {
            steps {
                sh '''
                    cp simple.py $TARGET_DIR/
                    echo "âœ… simple.py copied to $TARGET_DIR"
                '''
            }
        }
    }
}

